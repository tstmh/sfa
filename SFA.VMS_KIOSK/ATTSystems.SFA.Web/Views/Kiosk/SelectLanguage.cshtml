@{
    Layout = null;
}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">


<!DOCTYPE html>
<html lang="en">
<head>
    <title>
        Select Language
    </title>
    <style>
        body {
            height: 100vh;
            width: 100vw;
            text-align: center;
            overflow-x: hidden;
            overflow-y: auto;
            margin: 0;
            transform-origin: center center;
        }

        h1 {
            font-size: 40px;
        }

        @@media (min-width: 360px) and (max-width: 767px) {
            #divMain {
                text-align: center;
            }

            b {
                text-align: center;
                font-size: 24px;
            }

            img {
                text-align: center;
            }

            .btn:not(.btn-link):not(.btn-circle) {
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.16), 0 2px 10px rgba(0, 0, 0, 0.12);
                -webkit-border-radius: 2px;
                -moz-border-radius: 2px;
                -ms-border-radius: 2px;
                border-radius: 2px;
                border: none;
                font-size: 12px;
                outline: none;
                margin-top: 10px;
            }
        }

        #btnEnglish, #btnChinese, #btnMalay {
            background: #E9510E;
            height: 80px;
            width: 350px;
            color: white;
            font-size: 26px;
        }

        #divMain {
            color: #E9510E;
            text-align: center;
            transform: scale(1.6);
        }
    </style>


    @* <a href="~/css/bootstrap.min.css.map">~/css/bootstrap.min.css.map</a> *@
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href='@Url.Content("~/css/bootstrap.min.css")' rel="stylesheet" type="text/css" />
    <link href='@Url.Content("~/css/style.css")' rel="stylesheet" type="text/css" />
    @* <link href="~/css/fontawsome.min.css" rel="stylesheet" /> *@

</head>

<body>

    <div class="row">
        <br />  <br />
        <br /><br /><br />
        <div class="col-md-12 text-center" id="divMain">
            <br />  <br />
            <br /><br /><br />
            <br />
            <br />
            <br /><br />
            <img src="~/images/singapore_food_agency_logo.png" alt="logo" />
            @* <img src="Images/Singapore_Food_Agency_logo.png" alt="logo" /> *@
            <br /><br /><br /> <br />
            <br />
            <br />
            <h1><strong>Visitor Management System</strong></h1>
            <br />

            <br /><br /><br /> <br /><br /><br />
            <div id="my-buttons">
                <button type="button" id="btnEnglish" class="btn btn-lg" onclick="@("window.location.href='" + @Url.Action("ScanNRICPassport", "Kiosk") + "'");">English</button>
                <br /><br />
                <button type="button" id="btnChinese" class="btn btn-lg" onclick="@("window.location.href='" + @Url.Action("ChinScanNRICPassport", "Kiosk") + "'");">中文</button>
                <br /><br />
                @* <button type="button" id="btnMalay" class="btn btn-lg" onclick="@("window.location.href='" + @Url.Action("MalayScanNRICPassport", "Kiosk") + "'");"> Bahasa Melayu</button> *@

            </div>
        </div>

    </div>
    <br />
    <br />
    <br />
</body>

</html>