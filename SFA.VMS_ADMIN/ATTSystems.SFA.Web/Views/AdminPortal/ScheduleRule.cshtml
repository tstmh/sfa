<h4 id="scheduleHead">ScheduleRule</h4>
<br />

<div class="main-body">
    <div class="page-wrapper">
        <!-- Page body start -->
        <div class="page-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-block">
                        <fieldset class="scheduler-border">
                            <legend>Device Config</legend>
                            <div class="row clearfix">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-3">
                                            <label asp-for="ruleName" class="form-label">Rule Name</label>
                                        </div>
                                        <div class="col-md-6">
                                            <input asp-for="ruleName" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-3">
                                            <label asp-for="doorId" class="form-label">Select Door</label>
                                        </div>
                                        <div class="col-md-6">
                                            <select class="form-control">
                                                <option value="">Please select an option:</option>
                                                <option value="Door1">Student</option>
                                                <option value="Door2">Staff</option>
                                                <option value="Door3">Lecture</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-3">
                                            <label asp-for="memberType" class="form-label">Allow For</label>
                                        </div>
                                        <div class="col-md-6">
                                            <select class="form-control" asp-for="accessPoint">
                                                <option value="">Please select an option:</option>
                                                <option value="Door1">Student</option>
                                                <option value="Door2">Staff</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-3">
                                            <label asp-for="Days" class="form-label">Days</label>
                                        </div>
                                        <div class="col-md-6">
                                            <select class="form-control" asp-for="accessPoint">
                                                <option value="">Please select an option:</option>
                                                <option value="option1">Sunday</option>
                                                <option value="option1">Monday</option>
                                                <option value="option1">Tuesday</option>
                                                <option value="option1">Wednesday</option>
                                                <option value="option1">Thursday</option>
                                                <option value="option1">Friday</option>
                                                <option value="option1">Saturday</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-3">
                                            <label asp-for="startTime" class="form-label">Start Time</label>
                                        </div>
                                        <div class="col-md-6">
                                            <input asp-for="startTime" type="date" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-3">
                                            <label asp-for="endTime" class="form-label">End Time</label>
                                        </div>
                                        <div class="col-md-6">
                                            <input asp-for="endTime" type="date" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <br /><br />
                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-2" style="text-align:center">
                                        <button type="button" class="btn btn-info" style="color:#fff; background: #488ccc">Submit</button>
                                        <button type="button" class="btn btn-warning" style="color:#fff; background: #fabe12">Cancel</button>
                                    </div>
                                    <div class="col-md-5"></div>
                                </div>
                                <br />
                            </div>
                        </fieldset>
                    </div>


                </div>
            </div>
        </div>
        <!-- Page body end -->
    </div>
</div>

