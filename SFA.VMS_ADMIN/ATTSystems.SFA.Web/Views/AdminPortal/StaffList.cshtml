    function RenderPartialView(relativeURI, modalType) {
        $.ajax({
            url: relativeURI,
            type: "Get",
            cache: false,
            success: function(data) {
                //custom showing popup
                $("#modalDiv").html("");
                $("#modalDiv").html(data);
                $(modalType).modal('show');
            },
            error: function(data) {
                /*alert("==1== " + data.statusText)*/
                swal("info", data.statusText, "info");
            }
        });
    }
