<script>
    function togglePasswordVisibility() {
        var passwordField = document.getElementById("pwd");
        var toggleBtn = document.querySelector(".toggle-password");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            toggleBtn.innerHTML = "&#128065;"; // Change to the closed eye symbol
        } else {
            passwordField.type = "password";
            toggleBtn.innerHTML = "&#128065;"; // Change to the open eye symbol
        }
        toggleBtn.classList.toggle("slash");
    }
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const rememberMeCheckbox = document.getElementById('rememberMe');
        const passwordInput = document.getElementById('pwd');

        // Load saved password from local storage if "Remember Me" was previously checked
        if (localStorage.getItem('rememberMe') === 'true') {
            const savedPassword = localStorage.getItem('pwd');
            if (savedPassword) {
                passwordInput.value = savedPassword;
            }
        }

        // Listen for changes on the "Remember Me" checkbox
        rememberMeCheckbox.addEventListener('change', function () {
            if (this.checked) {
                // If the checkbox is checked, prompt the user to confirm saving the password
                const savePassword = confirm('Do you want to save your password?');
                if (savePassword) {
                    // Save the password to local storage
                    localStorage.setItem('rememberMe', 'true');
                    localStorage.setItem('pwd', passwordInput.value);
                } else {
                    // Uncheck the checkbox if the user cancels saving the password
                    this.checked = false;
                }
            } else {
                // If the checkbox is unchecked, remove the saved password from local storage
                localStorage.removeItem('rememberMe');
                localStorage.removeItem('pwd');
            }
        });
    });
</script>

